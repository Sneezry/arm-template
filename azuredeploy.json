{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionAppName": {
            "type": "string"
        },
        "siteLocation": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Insights/components",
            "kind": "other",
            "name": "[concat(parameters('functionAppName'), '-application-insights')]",
            "apiVersion": "2014-04-01",
            "location": "Central US",
            "tags": { "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('siteName'))]": "Resource" },
            "properties": {
                "ApplicationId": "[parameters('functionAppName')]"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[concat(parameters('functionAppName'), '-storage')]",
            "apiVersion": "2016-01-01",
            "location": "[parameters('siteLocation')]",
            "tags": {},
            "properties": {},
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "name": "[parameters('functionAppName')]",
            "apiVersion": "2015-08-01",
            "location": "[parameters('siteLocation')]",
            "properties": {
                "name": "[parameters('functionAppName')]",
                "numberOfWorkers": 0
            },
            "dependsOn": [
                "[resourceId('Microsoft.Insights/components', concat(parameters('functionAppName'), '-application-insights'))]"
            ]
        },
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[parameters('functionAppName')]",
            "apiVersion": "2015-08-01",
            "location": "[parameters('siteLocation')]",
            "properties": {
                "name": "[parameters('functionAppName')]",
                "hostNames": [
                    "[concat(parameters('functionAppName'),'.azurewebsites.net')]"
                ],
                "enabledHostNames": [
                    "[concat(parameters('functionAppName'),'.azurewebsites.net')]",
                    "[concat(parameters('functionAppName'),'.scm.azurewebsites.net')]"
                ],
                "hostNameSslStates": [
                    {
                        "name": "[concat(parameters('functionAppName'),'.azurewebsites.net')]",
                        "sslState": 0,
                        "thumbprint": null,
                        "ipBasedSslState": 0
                    },
                    {
                        "name": "[concat(parameters('functionAppName'),'.scm.azurewebsites.net')]",
                        "sslState": 0,
                        "thumbprint": null,
                        "ipBasedSslState": 0
                    }
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('functionAppName'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('functionAppName'))]"
            ]
        },
        {
            "apiVersion": "2015-08-01",
            "name": "appsettings",
            "type": "config",
            "dependsOn": [
                "[concat('Microsoft.Web/sites/', parameters('functionAppName'))]"
            ],
            "properties": {
                "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(concat('Microsoft.Insights/components/', concat(parameters('functionAppName'), '-application-insights')).InstrumentationKey]"
            }
        }
    ]
}